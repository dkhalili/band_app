<%= form_for (@band) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br>

	<%= f.label :genre %>
	<%= f.text_field :genre %><br>

	<%= f.label :explicit_lyrics %>
	<%= f.radio_button :explicit_lyrics, true %>
	<%= f.label :True %>
	<%= f.radio_button :explicit_lyrics, false %>
	<%= f.label :False %><br>

	<%= f.submit %>
<% end %>